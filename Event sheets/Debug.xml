<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Debug</name>
    <events>
        <event-group description="All debug stuff here" title="Debug">
            <sub-events>
                <comment>Start Debug Panel</comment>
                <event-block disabled="1">
                    <conditions>
                        <condition id="-1" name="Every tick" type="System" />
                    </conditions>
                    <actions />
                </event-block>
                <comment>Enable / Disable AI markers for Enemy - Useful in Debugging</comment>
                <event-block disabled="1">
                    <conditions>
                        <condition id="2" name="Key is down" type="Keyboard">
                            <param id="0" name="Key">32 (Space)</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-15" name="Set visible" type="lineofsight">
                            <param id="0" name="Visibility">1</param>
                        </action>
                        <action id="-15" name="Set visible" type="MarkerLeftRight">
                            <param id="0" name="Visibility">1</param>
                        </action>
                        <action id="-15" name="Set visible" type="MarkerSTOP">
                            <param id="0" name="Visibility">1</param>
                        </action>
                    </actions>
                </event-block>
                <event-block disabled="1">
                    <conditions>
                        <condition id="2" name="Key is down" type="Keyboard">
                            <param id="0" name="Key">73 (I)</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-15" name="Set visible" type="lineofsight">
                            <param id="0" name="Visibility">0</param>
                        </action>
                        <action id="-15" name="Set visible" type="MarkerLeftRight">
                            <param id="0" name="Visibility">0</param>
                        </action>
                        <action id="-15" name="Set visible" type="MarkerSTOP">
                            <param id="0" name="Visibility">0</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="0" name="On key pressed" type="Keyboard">
                            <param id="0" name="Key">27 (Esc)</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-26" name="Restart layout" type="System" />
                    </actions>
                </event-block>
                <comment>Player in GOD Mode -  To test the whole game without dying... except this doesnt test for math on player health</comment>
                <event-block>
                    <conditions>
                        <condition id="-1" name="Every tick" type="System" />
                    </conditions>
                    <actions>
                        <action id="-10" name="Set value" type="playertank">
                            <param id="0" name="Instance variable">health</param>
                            <param id="1" name="Value">100</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
    </events>
</c2eventsheet>
