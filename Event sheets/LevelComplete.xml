<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>LevelComplete</name>
    <events>
        <event-group description="Conditions for game completion." sid="924" title="Game Completion">
            <sub-events>
                <comment>When Player kills all enemies, Level is complete. Stop input. Let player know and save the completed level number</comment>
                <event-block sid="925">
                    <conditions>
                        <condition id="-8" name="Compare two values" sid="926" type="System">
                            <param id="0" name="First value">enemytower.Count</param>
                            <param id="1" name="Comparison">3</param>
                            <param id="2" name="Second value">0</param>
                        </condition>
                        <condition id="-8" name="Compare two values" sid="927" type="System">
                            <param id="0" name="First value">enemytank.Count</param>
                            <param id="1" name="Comparison">3</param>
                            <param id="2" name="Second value">0</param>
                        </condition>
                        <condition id="-4" name="Trigger once while true" sid="928" type="System" />
                    </conditions>
                    <actions>
                        <action behavior="ScrollTo" id="0" name="Shake" sid="929" type="playertank">
                            <param id="0" name="Magnitude">20</param>
                            <param id="1" name="Duration">0.5</param>
                            <param id="2" name="Mode">0</param>
                        </action>
                        <action behavior="Car" id="0" name="Stop" sid="930" type="playertank" />
                        <action behavior="Car" id="2" name="Set ignoring input" sid="931" type="playertank">
                            <param id="0" name="Input">1</param>
                        </action>
                        <action id="0" name="Set local value" sid="932" type="WebStorage">
                            <param id="0" name="Key">&quot;SaveCompletedLevels&quot;</param>
                            <param id="1" name="Value">&quot;1&quot;</param>
                        </action>
                        <action disabled="1" id="-3" name="Create object" sid="933" type="System">
                            <param id="0" name="Object to create">Text_AreaConquered</param>
                            <param id="1" name="Layer">4</param>
                            <param id="2" name="X">LayoutWidth/2</param>
                            <param id="3" name="Y">LayoutHeight/2</param>
                        </action>
                        <action id="-3" name="Create object" sid="934" type="System">
                            <param id="0" name="Object to create">Text_AreaConquered</param>
                            <param id="1" name="Layer">4</param>
                            <param id="2" name="X">(ViewportLeft(&quot;HUD&quot;)+ViewportRight(&quot;HUD&quot;))/2</param>
                            <param id="3" name="Y">(ViewportTop(&quot;HUD&quot;)+ViewportBottom(&quot;HUD&quot;))/2</param>
                        </action>
                        <action behavior="Flash" id="0" name="Flash" sid="935" type="Text_AreaConquered">
                            <param id="0" name="&apos;On&apos; time">0.2</param>
                            <param id="1" name="&apos;Off&apos; time">0.2</param>
                            <param id="2" name="Duration">3</param>
                        </action>
                        <action id="-16" name="Wait" sid="936" type="System">
                            <param id="0" name="Seconds">3</param>
                        </action>
                        <action id="-9" name="Destroy" sid="937" type="Text_AreaConquered" />
                    </actions>
                    <sub-events>
                        <comment>OverWrite Webstorage completed level only if next stage is NOT unlocked already</comment>
                        <event-block sid="938">
                            <conditions>
                                <condition id="-8" name="Compare two values" sid="939" type="System">
                                    <param id="0" name="First value">int(WebStorage.LocalValue(&quot;SaveCompletedLevels&quot;))</param>
                                    <param id="1" name="Comparison">3</param>
                                    <param id="2" name="Second value">1</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="0" name="Set local value" sid="940" type="WebStorage">
                                    <param id="0" name="Key">&quot;SaveCompletedLevels&quot;</param>
                                    <param id="1" name="Value">&quot;1&quot;</param>
                                </action>
                                <action id="-2" name="Go to layout" sid="941" type="System">
                                    <param id="0" name="Layout">stage0</param>
                                </action>
                            </actions>
                        </event-block>
                        <event-block sid="942">
                            <conditions>
                                <condition id="-22" name="Else" sid="943" type="System" />
                            </conditions>
                            <actions>
                                <action id="-2" name="Go to layout" sid="944" type="System">
                                    <param id="0" name="Layout">stage0</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-block>
                <comment>When Player gets DESTROYED. level is lost. Stop input. Let player know and take input of restart/quit.&#x0D;&#x0A;Destroy HUDs to keep screen clear.</comment>
                <event-block sid="945">
                    <conditions>
                        <condition id="-8" name="Compare two values" sid="946" type="System">
                            <param id="0" name="First value">playertank.Count</param>
                            <param id="1" name="Comparison">3</param>
                            <param id="2" name="Second value">0</param>
                        </condition>
                        <condition id="-4" name="Trigger once while true" sid="947" type="System" />
                    </conditions>
                    <actions>
                        <action id="-3" name="Create object" sid="948" type="System">
                            <param id="0" name="Object to create">Text_MissionFailed</param>
                            <param id="1" name="Layer">4</param>
                            <param id="2" name="X">(ViewportLeft(&quot;Turret&quot;)+ViewportRight(&quot;Turret&quot;))/2</param>
                            <param id="3" name="Y">(ViewportTop(&quot;Turret&quot;)+ViewportBottom(&quot;Turret&quot;))/4</param>
                        </action>
                        <action id="-3" name="Create object" sid="949" type="System">
                            <param id="0" name="Object to create">yesButton</param>
                            <param id="1" name="Layer">4</param>
                            <param id="2" name="X">Text_MissionFailed.X</param>
                            <param id="3" name="Y">ViewportBottom(&quot;Turret&quot;)/1.8</param>
                        </action>
                        <action id="-3" name="Create object" sid="950" type="System">
                            <param id="0" name="Object to create">noButton</param>
                            <param id="1" name="Layer">4</param>
                            <param id="2" name="X">Text_MissionFailed.X</param>
                            <param id="3" name="Y">yesButton.Y+100</param>
                        </action>
                        <action id="-15" name="Set visible" sid="951" type="hudHolder">
                            <param id="0" name="Visibility">0</param>
                        </action>
                        <action id="-9" name="Destroy" sid="952" type="AmmoCntPrimary" />
                        <action id="-9" name="Destroy" sid="953" type="AmmoCntSecondary" />
                        <action id="-9" name="Destroy" sid="954" type="HUDprime" />
                        <action id="-9" name="Destroy" sid="955" type="HUDsecond" />
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
    </events>
</c2eventsheet>
