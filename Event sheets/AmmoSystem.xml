<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>AmmoSystem</name>
    <events>
        <event-group collapsed="1" description="Deals with Ammo calculations" title="Ammo System">
            <sub-events>
                <comment>Primary Ammo count is 2 digit... looks out of alignment when it counts down to single digits.&#x0D;&#x0A;So reset X position to secondary Ammo to keep it aligned.</comment>
                <event-block>
                    <conditions>
                        <condition id="-7" name="Compare instance variable" type="playertank">
                            <param id="0" name="Instance variable">primaryAmmo</param>
                            <param id="1" name="Comparison">2</param>
                            <param id="2" name="Value">10</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-1" name="Set X" type="AmmoCntPrimary">
                            <param id="0" name="X">AmmoCntSecondary.X</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-7" name="Compare instance variable" type="playertank">
                            <param id="0" name="Instance variable">primaryAmmo</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Value">10</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-1" name="Set X" type="AmmoCntPrimary">
                            <param id="0" name="X">1400</param>
                        </action>
                    </actions>
                </event-block>
                <comment>Cap Ammo Counts.</comment>
                <event-block>
                    <conditions>
                        <condition id="-7" name="Compare instance variable" type="playertank">
                            <param id="0" name="Instance variable">primaryAmmo</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Value">99</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-10" name="Set value" type="playertank">
                            <param id="0" name="Instance variable">primaryAmmo</param>
                            <param id="1" name="Value">99</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-7" name="Compare instance variable" type="playertank">
                            <param id="0" name="Instance variable">secondaryAmmo</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Value">5</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-10" name="Set value" type="playertank">
                            <param id="0" name="Instance variable">secondaryAmmo</param>
                            <param id="1" name="Value">5</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
    </events>
</c2eventsheet>
