<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>stage0events</name>
    <events>
        <comment>When player knows to touch the screen, training is complete. Level 0 is complete, let player know</comment>
        <event-block collapsed="1" disabled="1" sid="330">
            <conditions>
                <condition id="3" name="On touched object" sid="331" type="Touch">
                    <param id="0" name="Object">okButton</param>
                </condition>
            </conditions>
            <actions>
                <action id="-9" name="Destroy" sid="332" type="okButton" />
                <action id="0" name="Spawn another object" sid="333" type="okButton">
                    <param id="0" name="Object">Text_AreaConquered</param>
                    <param id="1" name="Layer">1</param>
                    <param id="2" name="Image point">0</param>
                </action>
                <action id="-16" name="Wait" sid="335" type="System">
                    <param id="0" name="Seconds">2</param>
                </action>
                <action id="-9" name="Destroy" sid="336" type="Text_AreaConquered" />
            </actions>
            <sub-events>
                <comment>OverWrite Webstorage completed level only if next stage is NOT unlocked already</comment>
                <event-block disabled="1" sid="337">
                    <conditions>
                        <condition id="-8" name="Compare two values" sid="338" type="System">
                            <param id="0" name="First value">int(WebStorage.LocalValue(&quot;SaveCompletedLevels&quot;))</param>
                            <param id="1" name="Comparison">3</param>
                            <param id="2" name="Second value">0</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="0" name="Set local value" sid="339" type="WebStorage">
                            <param id="0" name="Key">&quot;SaveCompletedLevels&quot;</param>
                            <param id="1" name="Value">&quot;0&quot;</param>
                        </action>
                        <action id="-2" name="Go to layout" sid="340" type="System">
                            <param id="0" name="Layout">menu</param>
                        </action>
                    </actions>
                </event-block>
                <event-block disabled="1" sid="341">
                    <conditions>
                        <condition id="-22" name="Else" sid="342" type="System" />
                    </conditions>
                    <actions>
                        <action id="-2" name="Go to layout" sid="343" type="System">
                            <param id="0" name="Layout">menu</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
        <event-block sid="344">
            <conditions>
                <condition id="1" name="On any key pressed" sid="345" type="Keyboard" />
            </conditions>
            <actions>
                <action id="-2" name="Go to layout" sid="346" type="System">
                    <param id="0" name="Layout">stage1</param>
                </action>
            </actions>
        </event-block>
        <event-block sid="347">
            <conditions>
                <condition id="1" name="On any touch end" sid="348" type="Touch" />
            </conditions>
            <actions>
                <action id="-2" name="Go to layout" sid="349" type="System">
                    <param id="0" name="Layout">stage1</param>
                </action>
            </actions>
        </event-block>
        <event-block sid="350">
            <conditions>
                <condition id="-2" name="On start of layout" sid="351" type="System" />
            </conditions>
            <actions>
                <action behavior="Bullet" id="0" name="Set speed" sid="352" type="normalbullet">
                    <param id="0" name="Speed">0</param>
                </action>
                <action id="-16" name="Wait" sid="353" type="System">
                    <param id="0" name="Seconds">5</param>
                </action>
                <action behavior="Bullet" id="0" name="Set speed" sid="354" type="normalbullet">
                    <param id="0" name="Speed">500</param>
                </action>
                <action id="-16" name="Wait" sid="355" type="System">
                    <param id="0" name="Seconds">15</param>
                </action>
                <action id="-2" name="Go to layout" sid="356" type="System">
                    <param id="0" name="Layout">stage1</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
