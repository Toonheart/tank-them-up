<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>TitleScreenEvents</name>
    <events>
        <event-group description="Actions for the menus" title="Menu Actions">
            <sub-events>
                <comment>Play the Game</comment>
                <event-block>
                    <conditions>
                        <condition id="3" name="On touched object" type="Touch">
                            <param id="0" name="Object">Text_Play</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-2" name="Go to layout" type="System">
                            <param id="0" name="Layout">stage1</param>
                        </action>
                    </actions>
                </event-block>
                <comment>Quit Game</comment>
                <event-block>
                    <conditions>
                        <condition id="3" name="On touched object" type="Touch">
                            <param id="0" name="Object">Text_Quit</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="1" name="Close" type="Browser" />
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
        <event-group description="" title="Animations" />
        <event-block>
            <conditions>
                <condition id="-1" name="Every tick" type="System" />
            </conditions>
            <actions />
        </event-block>
    </events>
</c2eventsheet>
