                        </condition>
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-block sid="1360">
                            <conditions>
                                <condition id="-14" name="Compare variable" sid="1337" type="System">
                                    <param id="0" name="Variable">IsMusic</param>
                                    <param id="1" name="Comparison">0</param>
                                    <param id="2" name="Value">1</param>
                                </condition>
                            </conditions>
