<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>LevelFailed</name>
    <events>
        <event-group description="Menus and actions for Level Failed" title="Game Over">
            <sub-events>
                <comment>ReStart the Game</comment>
                <event-block>
                    <conditions>
                        <condition id="3" name="On touched object" type="Touch">
                            <param id="0" name="Object">reloadButton</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-26" name="Restart layout" type="System" />
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="3" name="On touched object" type="Touch">
                            <param id="0" name="Object">yesButton</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-26" name="Restart layout" type="System" />
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="3" name="On touched object" type="Touch">
                            <param id="0" name="Object">noButton</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-2" name="Go to layout" type="System">
                            <param id="0" name="Layout">menu</param>
                        </action>
                    </actions>
                </event-block>
                <comment>Pause the Game</comment>
                <event-block>
                    <conditions>
                        <condition id="3" name="On touched object" type="Touch">
                            <param id="0" name="Object">hudHolder</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-26" name="Restart layout" type="System" />
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
    </events>
</c2eventsheet>
